<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorGray_b">

        <ImageView
            android:id="@+id/img_book_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="这是标题"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="这是作者"
                android:textColor="@color/colorWhite_1"
                android:textSize="12sp" />

            <com.dl7.tag.TagLayout
                android:id="@+id/tl_book_tag"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                app:tag_layout_bg_color="@color/colorClarity"
                app:tag_layout_border_color="@color/colorClarity"
                app:tag_layout_border_width="0dp"
                app:tag_layout_random_color="true"
                app:tag_layout_shape="arc"
                app:tag_view_border_color="@color/colorClarity"
                app:tag_view_text_color="@color/colorWhite"
                app:tag_view_text_size="8sp"></com.dl7.tag.TagLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="4dp"
                    android:background="@mipmap/icon_comic_human" />

                <TextView
                    android:id="@+id/tv_book_ift"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="1234万"
                    android:textColor="@color/colorWhite_1"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="@color/colorWhite_1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_save"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="130dp"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:text="离线缓存" />

            <Button
                android:id="@+id/bt_read"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:text="开始阅读" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="108dp"
            android:layout_height="144dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/img_stroke_bg2"
            android:padding="2dp">

            <ImageView
                android:id="@+id/img_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGray_e" />

            <TextView
                android:id="@+id/tv_book_star"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="right|top"
                android:background="@color/black_overlay"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/colorWhite"
                android:textSize="10sp" />
        </FrameLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="780dp"
        android:layout_marginTop="260dp"
        android:background="@color/colorGreen">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="V33333333333333333" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:background="@color/colorOrange">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="V2222222222222222" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alpha="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="XX"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>
